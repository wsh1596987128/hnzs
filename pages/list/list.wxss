/* pages/list/list.wxss */
page{
  background-color: #eee;
}
.info{
  width:100%;
  height: 150rpx;
  background-color: #fff;
  margin-bottom:20rpx;
  align-content: center;
  padding-top: 1px solid #eee;
}
.name{
  padding:10rpx 65rpx;
  display:flex;
}
.introinfo{
  padding: 5rpx 65rpx;
  font-size: 24rpx;
  color:#999;
  line-height: 50rpx;
}
/* 列表 */
.content{
  background-color: #fff;
	width:90%;
	height: 145rpx;
  margin-top:15rpx;
  margin-left:35rpx;
  display:flex;
  flex-direction:row;
  overflow: hidden;
  position: positive;
  border-bottom:1px solid #eee;
}
.img{
  width:180rpx;
  height:130rpx;
  border-radius:5px;
}
.intro{
  width: 80%;
  height:130rpx;
  display:flex;
  flex-direction:column;
}
.list{
  height:100rpx;
  padding: 2rpx 15rpx;
  line-height: 50rpx;
  font-size:28rpx;
  overflow:hidden;
}
.time{
  color:#999;
  line-height: 10rpx;
  font-size:24rpx;
  padding-left:360rpx;
}
.loading{  
   padding: 20rpx; 
   font-size:24rpx; 
   text-align: center;  
   color:#999;  
}
.copyright{
   padding: 30rpx; 
   font-size:26rpx; 
   text-align: center; 
   border-top:1px solid #eee; 
}